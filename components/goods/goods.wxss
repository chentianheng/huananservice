.price {
  position: absolute;
  top: -2rpx;
  left: 36rpx;
  color: #E0AC66;
  font-size: 32rpx;
}

.format-name {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  font-size: 12px;
  color: #E0AC66;
  /* margin: 5rpx 0 5rpx 20rpx; */
}

.format-name text {
  padding-right: 10rpx;
   color: #E0AC66;
}

.clickcolect {
  background-color: rgb(250, 250, 250);
  font-size: 23rpx;
  color: rgb(172, 172, 172);
  line-height: 1.2;
  height: 60rpx;
  position: absolute;
  bottom: 0;
  width: 100%;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-weight: 300;
}