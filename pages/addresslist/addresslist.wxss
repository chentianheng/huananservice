/* pages/address/address.wxss */

page {
  background-color: #f7f7f7;
}
.navigationTitle {
  width: 100%;
  /* height: 62px; */
  background-color: var(--theme-color);
  font-size: 35rpx;
  font-family: "SourceHanSansCN";
  color: #fff;
  display: flex;
  align-items: center;
  /* padding-top:20rpx; */
  justify-content: center;
  position: relative;
}

.backImg {
  /* height: 100%; */
  display: flex;
  align-items: center;
  position: absolute;
  left: 20rpx;
  bottom: 0rpx;
}

.save {
  background-color: var(--theme-color);
  margin: 0 20px;
  height: 40px;
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  margin-top: 100px;
  font-size: 30rpx;
}

.radio-group {
  /* background-color:white; */
  /* margin: 20rpx 0; */
  margin-top: 5px;
}

.radio {
  background-color: white;
  /* margin-top: 15rpx; */
  display: flex;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.namephone {
  padding: 30rpx 20rpx;
  font-size: 32rpx;
}

.address {
  padding: 10rpx 20rpx 50rpx 20rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 300;
}

.operate {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #333;
  position:relative;
  justify-content:space-between;
}

.operate image {
  height: 40rpx;
  width: 40rpx;
}

.namephone {
  padding: 20rpx 20rpx 10rpx 20rpx;
  display: flex;
  font-weight: bold;
  font-size: 18px;
}

.name {
  font-size: 18px;
  font-weight: bold;
  color: black;
}

.phone {
  margin-left: 30rpx;
  font-size: 18px;
  font-weight: bold;
  color: black;
}

.address02 {
  padding: 10rpx 25rpx 20rpx 20rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.address02 text {
  padding-right: 10rpx;
  font-size: 28rpx;
}

.wechatAdress {
  display: flex;
  background-color: white;
  justify-content: space-between;
  align-items: center;
  padding: 10px 25rpx;
}

.waddress {
  display: flex;
  font-size: 30rpx;
  color: #333;
  align-items:center;
}

.waddress image {
  height: 25px;
  width: 31px;
}

