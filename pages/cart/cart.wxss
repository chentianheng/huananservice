/* pages/cart/cart.wxss */

page {
  background-color: #f7f7f7;
}

.price-count{
  z-index: 100;
}
.shopCon {
  padding-right: 10px;
  background-color: white;
  text-align: right;
  /* color: #3e91ff; */
  /* color: var(--theme-color); */
  font-size: 16px;
  font-weight: 300;
  display: flex;
  justify-content: space-between;
  height: 40px;
  align-items: center;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 100;
}

.product-price {
  font-size: 17px;
  font-weight: bold;
  color: black;
  margin-bottom: 20rpx;
  text-align: center;
}

.stepper {
  width: 112px;
  height: 34px;
  border: 1px solid #ccc;
  border-radius: 3px;
}

/*加号和减号*/

.stepper text {
  width: 35px;
  line-height: 34px;
  text-align: center;
  float: left;
}

/*数值*/

.stepper input {
  width: 40px;
  height: 34px;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 14px;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
  line-height: 25px;
  /* color: #f44; */
  font-family: -apple-system-font, "Microsoft YaHei";
}

/*普通样式*/

.stepper .normal {
  color: #f44;
}

/*禁用样式*/

.stepper .disabled {
  color: #ccc;
}

.shoplabel {
  font-size: 30rpx;
  display: flex;
  color: #333;
}

.bottomBtn {
  background-color: white;
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 90rpx;
  align-items: center;
  z-index: 3;
}

.count {
  width: 65%;
  display: flex;
  justify-content: center;
  font-size: 32rpx;
}

.submit {
  background-color: #fa5555;
  width: 35%;
  height: 100%;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
}

.cartCon {
  background-color: white;
  padding: 0 10px;
  margin: 3px 0;
  /* padding-bottom: 60px; */
}

checkbox .wx-checkbox-input {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid rgba(153, 153, 153, 0.822);
  border-radius: 100%;
}
/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: var(--theme-color);
  border:2rpx solid var(--theme-color);
}
/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.cart-image {
  margin: 5px;
}

.cart-image image {
  height: 200rpx;
  width: 200rpx;
}

.cart-name {
  font-size: 30rpx;
  color: #333;
  letter-spacing: 1px;
  margin-top: 15px;
}

.cart-remarks {
  font-size: 28rpx;
  color: #878787;
}

.cart-p-n {
  display: flex;
  justify-content: space-between;
  position: absolute;
  bottom: 15rpx;
  width: 100%;
  z-index: 1;
}

.cart-price {
  font-size: 31rpx;
  color: #d33d3e;
}

.cart-num {
  display: flex;
  font-size: 26rpx;
  letter-spacing: 2px;
  color: #333;
  z-index: 3
}

.sub {
  background-color: #eee;
  height: 23px;
  width: 23px;
  border-radius: 50%;
  display: flex;
  /* text-align:center; */
  align-items: center;
  justify-content: center;
  font-size: 23px;
}

.numvalue {
  background-color: #eee;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 15px;
  border-radius: 8px;
  margin: 0 5px;
}

.add {
  background-color: #eee;
  height: 23px;
  width: 23px;
  border-radius: 50%;
  display: flex;
  /* text-align:center; */
  align-items: center;
  justify-content: center;
  font-size: 18px;
}