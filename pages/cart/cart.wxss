/* pages/cart/cart.wxss */

page {
  background-color: #f7f7f7;
}

.shopCon {
  padding-right: 10px;
  background-color: white;
  padding-bottom: 5px;
  text-align: right;
  color: #3e91ff;
  font-weight: 300;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  align-items: center;
}

.shoplabel {
  font-size: 30rpx;
  display: flex;
  color: #333;
}

.bottomBtn {
  background-color: white;
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 90rpx;
  align-items: center;
  z-index: 3;
}

.count {
  width: 65%;
  display: flex;
  justify-content: center;
  font-size: 32rpx;
}

.submit {
  background-color: #fa5555;
  width: 35%;
  height: 100%;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
}

.cartCon {
  background-color: white;
  padding: 0 10px;
  margin: 3px 0;
  /* padding-bottom: 60px; */
}

.cart-check {}

.cart-image {
  margin: 5px;
}

.cart-image image {
  height: 200rpx;
  width: 200rpx;
}

.cart-name {
  font-size: 30rpx;
  color: #333;
  letter-spacing: 1px;
  margin-top: 15px;
}

.cart-remarks {
  font-size: 28rpx;
  color: #878787;
}

.cart-p-n {
  display: flex;
  justify-content: space-between;
  position: absolute;
  bottom: 15rpx;
  width: 100%;
}

.cart-price {
  font-size: 31rpx;
  color: #d33d3e;
}

.cart-num {
  display: flex;
  font-size: 26rpx;
  letter-spacing: 2px;
  color: #333;
  z-index: 3
}

.sub {
  background-color: #eee;
  height: 23px;
  width: 23px;
  border-radius: 50%;
  display: flex;
  /* text-align:center; */
  align-items: center;
  justify-content: center;
  font-size: 23px;
}

.numvalue {
  background-color: #eee;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 15px;
  border-radius: 8px;
  margin: 0 5px;
}

.add {
  background-color: #eee;
  height: 23px;
  width: 23px;
  border-radius: 50%;
  display: flex;
  /* text-align:center; */
  align-items: center;
  justify-content: center;
  font-size: 18px;
}