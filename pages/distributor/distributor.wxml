<nav title="{{title}}"></nav>
<scroll-view style="margin-top:{{titleBarHeight+statusBarHeight}}px;">
	<view class="sharelink-pl p12">
		<!-- <view class='title_msg'>
      <view class='qrcode'>可提现收益 (元)</view>
    </view> -->
		<view class='withdraw'>
			<view class='qrcode'>
				<view>
					可提现收益 (元)
				</view>
				<view style="position: absolute;right: 20rpx;margin-top: 20rpx;">
					<navigator url='../subordinate/subordinate'>
						<text>我的下线:</text>
						<text style='color: #fff;margin-left: 7px;font-weight: bold;font-size: 17px;'>{{subordinateCount}}</text>
					</navigator>
					<navigator url='../staff/staff'>
						<text>我的员工:</text>
						<text style='color: #fff;margin-left: 7px;font-weight: bold;font-size: 17px;'>{{distributorMsg?distributorMsg.staffs.length:0}}</text>
					</navigator>
				</view>

			</view>
			<view style="font-size:60rpx;color:#fff;font-weight:bold;">
				<text>{{distributor.balance || 0}}</text>
			</view>
		</view>

		<!-- 	<view class="register">
			<view>
				<text>下线人数:</text>
				<text style='color:#fd5742;margin-left:15rpx;'>{{subordinateCount}}</text>
			</view>
			<navigator url="{{'../subordinate/subordinate?distributorId=' + distributor.id}}">
				<text class='detail_l'>查看下线</text>
			</navigator>
		</view> -->

		<view style="display: flex;align-items: center;border-top: 1rpx solid rgba(255,255,255,0.5);">
			<view class='income'>
				<view style="color: rgba(255,255,255,0.5);">累计收益金额</view>
				<view style="color: rgba(255,255,255);">{{distributor.total || 0}} 元</view>
			</view>
			<view class='total'>
				<view style="color: rgba(255,255,255,0.5);">累计提现金额</view>
				<view style="color: rgba(255,255,255);">{{distributor.withdrawed || 0}} 元</view>
			</view>
		</view>
	</view>


	<view class="detail-pl mt12">
		<view class="weui-tab">
			<view class="weui-navbar">
				<block wx:for-items="{{tabs}}" wx:key="{{index}}">
					<view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
						<view class="weui-navbar__title">{{item.label}}</view>
					</view>
				</block>
			</view>

			<view class="weui-tab__panel">
				<view class="weui-tab__content" hidden="{{activeIndex != 0}}">
					<block wx:for="{{profits}}" wx:for-item="profit">
						<view class='order-body' wx:for="{{profit.products}}" wx:key="index" wx:for-item="product">
							<image src="{{product.imgUrl}}"></image>
							<view class='body'>
								<view class='name'>
									<text>{{product.name}}</text>
									<text style='font-size:32rpx;color:black'>¥ {{product.price / 100}}</text>
								</view>
								<view class='name02'>
									<text>规格: {{product.name}}</text>
									<text>x {{product.count}}</text>
								</view>
								<view class='name02'>
									<text>工艺: 生茶</text>
								</view>
							</view>
						</view>

						<view style="padding-bottom: 22rpx;">
							<view class="customer-item">
								<text>客户:{{profit.address.userName}}</text>
								<text>电话:{{profit.address.telNumber}}</text>
							</view>
							<view class="customer-item">
								<view>
									<text>订单金额:</text>
									<text style="color:var(--theme-color)">￥{{profit.totalPrice}}</text>
								</view>
								<view>
									<text>返现金额:</text>
									<text style="color:var(--theme-color)">￥{{profit.profit}}</text>
								</view>
							</view>
						</view>

						<!-- <view class="li">
							<view class="left">
								<p>单号：{{item.orderNum}}</p>
								<p>时间：{{item.createdAt}}</p>
							</view>
							<view class="right">
								<p>订单金额
									<span>￥{{item.totalPrice}}</span>
								</p>
								<p>返现金额
									<span style="color: red">￥{{item.profit}}</span>
								</p>
							</view>
						</view> -->
					</block>
				</view>

				<view class="weui-tab__content" hidden="{{activeIndex != 1}}">
					<block wx:for-items="{{withdraws}}" wx:key="{{index}}">
						<view class="li">
							<view class="left">
								<p>时间：{{item.createdAt}}</p>
							</view>
							<view class="right text-center">
								<p>
									<span>￥{{item.withdraw}}</span>
								</p>
							</view>
						</view>
					</block>
				</view>
			</view>
		</view>
	</view>

	<view catchtap="onLogoutTap" class='collection'>
		<view style='display:flex;flex-direction:column;justify-content:center;align-items:center;'>
			<text>{{collectNum}}</text>
			<text style='font-size:12px'>退出登陆</text>
		</view>
	</view>

</scroll-view>