.collection {
  position: fixed;
  bottom: 60rpx;
  display: flex;
  background-color: #d33d3e;
  right: 0;
  width: 150rpx;
  height: 70rpx;
  border-top-left-radius: 35rpx;
  border-bottom-left-radius: 35rpx;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 14px;
}


.order-body {
  display: flex;
  padding: 20rpx 20rpx;
  background-color: #f7f7f7;
}

.order-body image {
  width: 130rpx;
  height: 130rpx;
}
.body {
  display: flex;
