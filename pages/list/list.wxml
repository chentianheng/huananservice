<view>
	<view style="position:sticky;top:0px;z-index:2;position:-webkit-sticky;">
		<view class='titleCon' style="height:{{titleBarHeight}}px;padding-top:{{statusBarHeight}}px">
			<view class='AvatarUrl'>
				<open-data type="userAvatarUrl" class='Avatar'></open-data>
			</view>
			<navigator class='search02' url='../search/search'>
				<icon style='padding-left:20rpx;' type="search" size="16"></icon>
				<text style='color:#7d7a7a;margin-left:3px;'>搜索茶名字</text>
			</navigator>
		</view>
	</view>

  <!-- banner -->
  <view style="width:100%;margin:auto;margin-top:0px;">
    <swiper autoplay="True" class="swiper_show60" indicator-dots="True" lower-threshold="10" indicator-color="rgba(255,255,255,0.3)" indicator-active-color="rgba(255,255,255,0.6)" interval="2000">
      <swiper-item wx:for="{{bannerList}}" wx:for-item="isBanner" wx:key="{{index}}" id="{{index}}" bindtap="bannerJump" data-index="{{index}}">
        <image mode="aspectFill" style="width:100%; height:100%;display:block;" src="{{isBanner.imgUrl}}" />
      </swiper-item>
    </swiper>
  </view>

	<view style="margin-top: 25rpx;">
		<scroll-view scroll-x="true" class='yearColumn'>
			<view wx:for="{{classifyList}}" wx:for-index="index" class='forYear' style="{{item.choosed?'background-color:rgba(0,0,0,0.04);font-size: 14px;color: var(--theme-color);line-height: 1.2;text-align: center;padding:5px 15px;border-radius:4px;margin:0 5px 5px 10px;font-weight:bold':''}}" catchtap='onProcessChoose' data-id="{{item.id}}">
				<text>{{item.name}}</text>
			</view>
		</scroll-view>
	</view>
	<view>
		<scroll-view scroll-x="true" class='yearColumn'>
			<view wx:for="{{year}}" wx:for-index="index" class='forYear' style="{{item.choosed?'background-color:rgba(0,0,0,0.04);font-size: 14px;color: var(--theme-color);line-height: 1.2;text-align: center;padding:5px 15px;border-radius:4px;margin:0 5px 5px 10px;font-weight:bold':''}}" catchtap='onYearChoose' data-id="{{item.id}}" data-name="{{item.name}}">
				<text>{{item.name}}</text>
			</view>
		</scroll-view>
	</view>
	<view>
		<scroll-view scroll-x="true" class='yearColumn'>
			<view wx:for="{{teaClassify}}" wx:for-index="index" class='forYear' style="{{item.choosed?'background-color:rgba(0,0,0,0.04);font-size: 14px;color: var(--theme-color);line-height: 1.2;text-align: center;padding:5px 15px;border-radius:4px;margin:0 5px 5px 10px;font-weight:bold':''}}" catchtap='onTechnologyChoose' data-id="{{item.id}}" data-name="{{item.name}}">
				<text>{{item.name}}</text>
			</view>
		</scroll-view>
	</view>

	<view>
		<goods s_index="{{sindex}}" goodList='{{goodList}}' bind:click_btn="onGoodTap" bind:cart_btn="cart_btn"></goods>
	</view>
</view>



