/* 顶部title */
page {
  background-color: #f9f9f9;
}
.titleCon {
  background-color: var(--theme-color);
  display: flex;
  justify-content: flex-start;
}

.AvatarUrl {
  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;
  background-color: white;
  position: relative;
  margin-left: 18px;
  margin-top: 8rpx;
}

.Avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: block;
  overflow: hidden;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.search02 {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 32rpx;
  border-radius: 44rpx;
  width: 50%;
  color: #666;
  background-color: white;
  font-size: 14px;
  font-weight: 300;
  height: 31px;
  margin-top: 6px;
  opacity: 0.9;
}

.dwh {
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 33rpx;
  margin-left: 10rpx;
