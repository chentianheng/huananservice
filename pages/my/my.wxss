.pure_top {
  width: 100%;
  height: 350rpx;
  position: relative;
 /*  z-index: -1; */
  overflow: hidden;
}

.pure_top::after {
  content: '';
  width: 140%;
  height: 350rpx;
  position: absolute;
  left: -20%;
  top: 0;
  z-index: -1;
  border-radius: 0 0 50% 50%;
  background: var(--theme-color);
}

