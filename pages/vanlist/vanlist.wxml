  <view class="base-container" style="justify-content: flex-start;width:100%">
    <view style="padding:10px;display:flex;width:90%;border-bottom: 1px solid #E1E1E1;" wx:for="{{list}}" wx:key="id" id="{{item.id}}" bindtap="onDetailTap">
        <image mode="aspectFill" style="width:160rpx; height:160rpx;display:block;" src="{{item.image}}"></image>
        <view class="vanContainer">
            <text class="vanTitle">{{item.name}}</text>
            <text class="vanDesc">{{item.introduction}}</text>
        </view>
    </view>
  </view>

